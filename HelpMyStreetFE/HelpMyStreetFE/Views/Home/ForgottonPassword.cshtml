@using HelpMyStreetFE.Models.Home;

@{
    ViewData["Title"] = "Forgotton Password";
}

<partial name="_SiteHeaderPublic" />
<div class="container">
    <form id="forgotton-form" method="post">
        <div class="forgotton">
            <div class="forgotton__page">
                <div class="forgotton__page__header"><h1>Reset your Password</h1></div>
                <div class="forgotton__page__text">Please enter the email address for your HelpMyStreet account</div>
                <div class="forgotton__page__input input">
                    <input type="text" name="email" placeholder="Email Address" />
                    <span class="error"></span>
                </div>
                <div class="forgotton__page__button">                    
                    <button id="submitbtn" class="btn cta">
                        <span class="text">Email me a Password Reset link</span>
                        <div class="loader"><partial name="_LoadingSpinner" model='new LoadingSpinnerViewModel { Text = "Loading"}' /></div>
                    </button>
                </div>
            </div>
        </div>
    </form>


    <div class="forgotton__page" id="forgotton_success">
        <div class="forgotton__page__header">
            <h1>Email sent</h1>
        </div>
        <div class="forgotton__page__text">
            <p> If you have a HelpMyStreet account, you'll shortly receive an email containing instructions on how to reset your password.</p>
        </div>
        <div class="forgotton__page__icon"> <img src="~/img/icons/green-tick.svg" /></div>
    </div>
</div>
