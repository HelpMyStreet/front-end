@model HomeViewModel;
@using HelpMyStreetFE.Models.Feedback;

@{ ViewData["Title"] = "Home Page"; }
@section Scripts {
    <script src="~/homepage.js" asp-append-version="true"></script>
    <script src="~/stickynav.js" asp-append-version="true"></script>
}
@if (!Model.isLoggedIn)
{
    <div class="sticky-nav" id="sticky-nav">
        <div class="row sm12 justify-center">
            <div class="flex row">
                <div class="sm6 mr-sm">
                    <a href="/login" class="btn cta small mb-sm mt-sm btn--sign-up fill">Sign Up or Log In</a>
                    <span>  </span>

                </div>
                <div class="sm6">
                    <span>  </span>
                    <a href="/request-help" class="btn cta small mb-sm mt-sm fill cta--orange">Request Help</a>
                </div>
            </div>
        </div>
    </div>}
<div class="container">


    <header class="content-page__header">
    </header>

    <div class="row hero flex sm12 mb-sm content-page">

        <div class="row sm6 align-center pad-md">
            <div class="row">
                <h2 class="sm12 mb-md">The platform that helps local people look after each other</h2>
            </div>
            <p class="row sm12 mt-sm mb-xs">
                HelpMyStreet helps organisations to connect neighbours in need with people who can help.<br>
            </p>

            <p class="row sm12 mt-sm mb-xs">
                We have a range of partners all over the country, and here are some of the things they are helping with:<br>
            </p>
            <div class="row sm12">
                <ul class="tick-list mt-xs mb-sm compact-list">
                    <li>Everyday tasks like collecting shopping</li>
                    <li>Strenuous activities like moving furniture or mowing the lawn</li>
                    <li>Practical support like filling in forms or setting up your Wi-Fi</li>
                    <li>Tackling loneliness with friendly phone calls or a check-in and chat</li>
                    <li>Assistance getting to and from essential appointments</li>
                </ul>
            </div>
            <div class="row sm12 mt-md">
                @await Component.InvokeAsync("Partners")
            </div>
        </div>
        <div class="row card sm6 street-check" id="street-map">
            <input id="pac-input" class="controls" type="text" placeholder="Type your town, city or street...">
            <div id="your-location">
                <button title="Your location">
                    <div id="your-location-image"></div>
                </button>
            </div>
            <div class="row sm12 map homepage-map" id="map">
            </div>
            <div class="row sm12 text-center justify-center">
                <p class="mb-0"><strong>Would you like to see your organisation on the map?</strong> <a href="mailto:contact@helpmystreet.org">Email us</a></p>
            </div>
        </div>
    </div>




</div>

<div class="outer-container outer-container--darker mt-md">
    <partial name="_NewsTicker" model="Model.NewsTickerMessages" />
</div>

<div class="outer-container mt-xs">
    <div class="container pt-md pb-md">
        <div class="how-to-use row justify-center card">
            <partial name="_HowToUse" model=@Model.isLoggedIn />
        </div>
    </div>
</div>

<div class="outer-container outer-container--darker">
    <div class="container">
        <div class="mt-lg">
            @await Component.InvokeAsync("Testimonials", new { feedbackMessageType = FeedbackMessageType.Other, numberToShow = 12 })
        </div>
    </div>
</div>

<div class="outer-container mt-lg">
    <div class="container pt-sm">
        <div class="row mt-lg justify-center">
            <div class="sm6 mb-md text-center justify-center"><a href="https://www.gov.uk/government/news/40m-boost-for-cutting-edge-start-ups" target="_blank"><img src="~/img/logos/UKRI_IUK_Logo.png" alt="Innovate UK Logo" width="350" /></a></div>
            <div class="sm6 text-center justify-center"><a href="https://www.youtube.com/watch?v=o7JxjkuJG4A" target="_blank"><img src="~/img/logos/BBC_Radio_logo.png" alt="BBC Radio Logo" width="190" /></a></div>
        </div>
    </div>
</div>


<div class="outer-container outer-container--darker">
    <div class="container">
        <partial name="_AboutHelpMyStreet" />
    </div>
</div>
