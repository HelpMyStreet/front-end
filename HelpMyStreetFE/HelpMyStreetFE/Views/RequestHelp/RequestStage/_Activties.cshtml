@using HelpMyStreet.Utils.Enums; 
@using HelpMyStreetFE.Models.RequestHelp;
@{
                var viewModel = Model;
                var activties = new List<RequestActivityViewModel>
{
        new RequestActivityViewModel{ Activity = HelpMyStreet.Utils.Enums.SupportActivities.Shopping,FriendlyName ="Shopping", Description = "Picking up groceries and other essentials (e.g. food, toiletries, household products)", ColourCode = "blue", Icon = "shopping.svg"},
        new RequestActivityViewModel{ Activity = HelpMyStreet.Utils.Enums.SupportActivities.FaceMask ,FriendlyName ="Face Covering", Description = "A washable and reusable fabric face covering", ColourCode = "dark-blue", Icon = "face-covering.svg", IconClass = "icon-size-sm"},
        new RequestActivityViewModel{ Activity = HelpMyStreet.Utils.Enums.SupportActivities.CheckingIn, FriendlyName ="Check in", Description = "Check that someone is OK", ColourCode = "light-purple", Icon = "check-in.svg"},
        new RequestActivityViewModel{ Activity = HelpMyStreet.Utils.Enums.SupportActivities.CollectingPrescriptions, FriendlyName ="Prescriptions",Description = "Collecting prescriptions from a local pharmacy", ColourCode = "blue", Icon = "prescriptions.svg"},
        new RequestActivityViewModel{ Activity = HelpMyStreet.Utils.Enums.SupportActivities.Errands,FriendlyName ="Errands", Description = "Running essential local errands (e.g. posting mail)", ColourCode = "blue", Icon = "Errands.svg"},
        new RequestActivityViewModel{ Activity = HelpMyStreet.Utils.Enums.SupportActivities.DogWalking,FriendlyName ="Dog Walking", Description = "Walking a calm dog", ColourCode = "dark-blue", Icon = "dog-walking.svg"},
        new RequestActivityViewModel{ Activity = HelpMyStreet.Utils.Enums.SupportActivities.MealPreparation,FriendlyName ="A Meal", Description = "Getting a hot / pre-prepared meal", ColourCode = "dark-blue", Icon = "meal.svg"},
        new RequestActivityViewModel{ Activity = HelpMyStreet.Utils.Enums.SupportActivities.PhoneCalls_Friendly,FriendlyName ="Friendly Chat", Description = "A friendly chat on the phone", ColourCode = "light-purple", Icon = "friendlychat.svg"},
        new RequestActivityViewModel{ Activity = HelpMyStreet.Utils.Enums.SupportActivities.PhoneCalls_Anxious,FriendlyName ="Supportive Chat", Description = "Some extra support over the phone", ColourCode = "light-purple", Icon = "supportivechat.svg", IconClass="double-line-alignment" },
        new RequestActivityViewModel{ Activity = HelpMyStreet.Utils.Enums.SupportActivities.HomeworkSupport,FriendlyName ="Homework", Description = "Remote support for children being home-schooled", ColourCode = "dark-blue", Icon = "homework.svg", IconClass="double-line-alignment"},

        new RequestActivityViewModel{ Activity = HelpMyStreet.Utils.Enums.SupportActivities.Other, FriendlyName = "Something Else", Description= "Please tell us more below", ColourCode = "dark-blue", Icon="question-mark.svg" }
    };
}

    <div class="tiles">
        <div class="row">
            @foreach (var activity in activties)
            {
                <div class="sm4">
                    <div id="@activity.Activity" data-type="activities" class="tiles__tile tiles__tile--large  @activity.Activity.Class()">
                        <div class="tiles__tile__content ">
                            @if (!string.IsNullOrEmpty(activity.Activity.Icon()))
                            {
                                <div class="tiles__tile__content__icon"><img class="@activity.IconClass" src="~/img/icons/@activity.Activity.Icon()" /> </div>
                            }
                            else
                            {
                                <div class="mt-md"></div>
                            }
                            <div class="tiles__tile__content__header">@activity.Activity.FriendlyName()</div>
                            <div class="tiles__tile__content__description">@activity.Description</div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <span id="e-activity" class="error"></span>
    </div>







