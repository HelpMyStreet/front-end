@model HelpMyStreetFE.Models.RequestHelp.RequestHelpViewModel;

<ol class="progress-bar">
    @for (int i = 0; i < Model.Steps.Count; i++)
    {
        <li class="@(Model.CurrentStepIndex == i ? "is-active" : "") @(Model.CurrentStepIndex > i ? "is-complete" : "")">
            <span>@Model.Steps[i].FriendlyName</span>
        </li>
    }
</ol>
