@model HelpMyStreetFE.Models.RequestHelp.Stages.Request.RequestHelpTimeViewModel;

@{
    var todaysDate = DateTime.Now;
    todaysDate = todaysDate.ToLocalTime();
    var stringDate = todaysDate.ToString("dd/MM/yyyy");
}

<div class="sm4">
    <div id="time_@Model.ID" data-type="timeframe" data-id='@Model.ID' data-allowcustom="@Model.AllowCustom" data-ondate="@Model.OnDate" data-val="@Model.Days.ToString()" class="tiles__tile @(Model.IsSelected ? "selected" : "" )">
        <div class="tiles__tile__content ">
            <div class="tiles__tile__content__header pt-xs">@Model.TimeDescription</div>
            @if (Model.OnDate)
            {
            <div class="tiles__tile__content__dateselection dnone">
                <input name="currentStep.SelectedTimeFrame.Date" type="text" id="datepicker" placeholder="e.g. @(stringDate)" autocomplete="off" />
                <span id ="dateselectionError" class="error"></span>
            </div>
            }
            </div>
        </div>
</div>
            
     







