@model HelpMyStreetFE.Models.NotificationModel;

<div class="notification__card" data-notificationId="@Model.Id">
    <div class="notification__icon__wrapper">
        <img class="notification__icon" src="~/img/icons/thumbs-up.svg" />
    </div>
    <div class="notification__content">
        <div class="notification__title">@Model.Title</div>
        <div class="notification__title">Your request has been submitted</div>
        <div class="notification__message">@Html.Raw(@Model.Message)</div>
        <div class="notification__message">Are you Volunteering in your local area? Sign up as a Street Champion or Helper to help and support local people shelter safely at home.</div>
        <div class="notification__button text-center mt-md">
            <a href="/registration/stepone" class="btn cta large fill mt16 btn--sign-up">Sign Up Now</a>
        </div>
    </div>            
</div>