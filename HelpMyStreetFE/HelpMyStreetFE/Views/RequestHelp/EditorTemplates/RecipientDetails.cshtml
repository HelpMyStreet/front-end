@model HelpMyStreetFE.Models.RequestHelp.NewMVCForm.Models.RecipientDetails



<div class="user-detail">
    <div class="row">
        <div class="input sm6">
            <label> first name</label>
            @Html.TextBoxFor(x => x.Firstname);
            <span class="error"></span>
        </div>
        <div class="input sm6">
            <label> last name</label>
            @Html.TextBoxFor(x => x.Lastname);
        <span class="error"></span>
        </div>
    </div>
    <div class="row">
        <div class="input sm6">
            <label> mobile number</label>
              @Html.TextBoxFor(x => x.MobileNumber);
            <span id="e-mobile_number_@Model.NamePostfix" class="error"></span>
        </div>
        <div class="input sm6">
            <label>  alternative phone number</label>
            @Html.TextBoxFor(x => x.AlternatePhoneNumber);
            <span id="e-alt_number_@Model.NamePostfix" class="error"></span>
        </div>
    </div>
    <div class="row">
        <div class="input sm6">
            <label> email address</label>
            @Html.TextBoxFor(x => x.AlternatePhoneNumber);
            <span id="e-email_@Model.NamePostfix" class="error"></span>
        </div>
        <div class="input sm3">
            <label> postcode</label>
            <input name="postcode_search_@Model.NamePostfix" type="text" placeholder="e.g. NG1 1PS" />
            <span id="e-postcode_search_@Model.NamePostfix" class="error"></span>
        </div>
        <div class="input sm3 find-address">
            <button class="btn large border-blue blue fill" id="address_finder_@Model.NamePostfix">
                <span class="text">Find address</span>
                <div class="loader"><partial name="_LoadingSpinner" model='new LoadingSpinnerViewModel { Text = "Searching...",  ShowDarkSpinner= true}' /></div>
            </button>
            <a id="manual_address_@Model.NamePostfix" class="input__link manual-entry">Or enter <span class="lowercase"></span> address manually</a>
        </div>

    </div>

    <div class="row">
        <div class="input sm6 dnone" id="address_selector_@Model.NamePostfix">
            <label>Select address  <a id="edit_address_@Model.NamePostfix" class="input__link manual-entry edit-address">Edit <span class="lowercase"></span> address</a></label>
            <select name="address_selector_@Model.NamePostfix">
            </select>

        </div>
    </div>
    <div class="row">
        <div id="expander_@Model.NamePostfix" class="expander sm6">
            <h5>Please enter <span class="lowercase"></span> address</h5>
            <div class="input">
                <label> address line 1</label>
                <input name="address_line_1_@Model.NamePostfix" type="text" placeholder="e.g. 170 High Street" />
                <span id="e-addressline1_@Model.NamePostfix" class="error"></span>
            </div>
            <div class="input">
                <label> address line 2</label>
                <input name="address_line_2_@Model.NamePostfix" type="text" placeholder="e.g. Hockley" />
                <span id="e-addressline2_@Model.NamePostfix" class="error"></span>
            </div>
            <div class="input">
                <label> town / city</label>
                <input name="city_@Model.NamePostfix" type="text" placeholder="e.g. Nottingham" />
                <span id="e-city_@Model.NamePostfix" class="error"></span>
            </div>
            <div class="input">
                <label> county</label>
                <input name="county_@Model.NamePostfix" type="text" placeholder="e.g. Nottingham" />
                <span id="e-county_@Model.NamePostfix" class="error"></span>
            </div>
            <div class="input">
                <label> postcode</label>
                <input name="postcode_@Model.NamePostfix" type="text" placeholder="e.g. NG1 1PS" />
                <span id="e-postcode_@Model.NamePostfix" class="error"></span>
            </div>
        </div>
    </div>

</div>