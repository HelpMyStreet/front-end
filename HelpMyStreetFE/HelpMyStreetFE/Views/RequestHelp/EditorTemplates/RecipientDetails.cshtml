@model HelpMyStreetFE.Models.RequestHelp.Stages.Detail.RecipientDetails



@{ 
    var prefix = ViewData["Prefix"] is string ? (string)ViewData["Prefix"] : "";
}
<div class="user-detail">
    <div class="row">
        <div class="input sm6">
            <label>@prefix first name</label>
            @Html.TextBoxFor(x => x.Firstname)
            <span class="error"></span>
        </div>
        <div class="input sm6">
            <label>@prefix last name</label>
            @Html.TextBoxFor(x => x.Lastname)
        <span class="error"></span>
        </div>
    </div>
    <div class="row">
        <div class="input sm6">
            <label>@prefix mobile number</label>
              @Html.TextBoxFor(x => x.MobileNumber, new { type = "number"})
        <span class="error"></span>
        </div>
        <div class="input sm6">
            <label>@prefix  alternative phone number</label>
            @Html.TextBoxFor(x => x.AlternatePhoneNumber, new { type = "number"})
            <span class="error"></span>
        </div>
    </div>
    <div class="row">
        <div class="input sm6">
            <label>@prefix email address</label>
            @Html.TextBoxFor(x => x.Email)
        <span class="error"></span>
        </div>
        <div class="input sm3">
            <label>@prefix postcode</label>
            <input name="postcode_search" type="text" placeholder="e.g. NG1 1PS" value="@Model?.Postcode" />
            <span class="error"></span>
        </div>
        <div class="input sm3 find-address">
            <button id="address_finder" type="button" class="btn large border-blue blue fill">
                <span class="text">Find address</span>
                <div class="loader"><partial name="_LoadingSpinner" model='new LoadingSpinnerViewModel { Text = "Searching...",  ShowDarkSpinner= true}' /></div>
            </button>
            <a class="input__link manual_entry">Or enter <span class="lowercase">@prefix</span> address manually</a>
        </div>

    </div>

    <div class="row" >
        <div class="input sm6 dnone" id="address_selector">
            <label>Select address <a  class="input__link manual_entry edit-address">Edit <span class="lowercase">@prefix</span> address</a></label>
            <select  name="address_selector">
            </select>
        </div>
    </div>
    <div class="row">
        <div class="@(Model?.Postcode != null ?  "dblock" : "")  expander sm6">
            <h5>Please enter <span class="lowercase">@prefix</span> address</h5>
            <div class="input">
                <label>@prefix address line 1</label>
                @Html.TextBoxFor(x => x.AddressLine1)
                <span class="error"></span>
            </div>
            <div class="input">
                <label>@prefix address line 2</label>
                @Html.TextBoxFor(x => x.AddressLine2)
                <span class="error"></span>
            </div>
            <div class="input">
                <label>@prefix town / city</label>
                @Html.TextBoxFor(x => x.Town)
                <span class="error"></span>
            </div>
            <div class="input">
                <label>@prefix county</label>
                @Html.TextBoxFor(x => x.County)
                <span class="error"></span>
            </div>
            <div class="input">
                <label>@prefix postcode</label>                
                @Html.TextBoxFor(x => x.Postcode, new { @class = "postcode-input"})
                <span class="error"></span>
            </div>
        </div>
    </div>
</div>