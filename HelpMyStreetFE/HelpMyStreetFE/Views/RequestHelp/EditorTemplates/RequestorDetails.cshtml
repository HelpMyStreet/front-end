@model HelpMyStreetFE.Models.RequestHelp.NewMVCForm.Models.RequestorDetails


@{
    var prefix = ViewData["Prefix"] is string ? (string)ViewData["Prefix"] : "";
}
<div class="user-detail">
    <div class="row">
        <div class="input sm6">
            <label>Your first name</label>
            @Html.TextBoxFor(x => x.Firstname)
            <span class="error"></span>
        </div>
        <div class="input sm6">
            <label>Your last name</label>
            @Html.TextBoxFor(x => x.Lastname)
            <span class="error"></span>
        </div>
    </div>
    <div class="row">
        <div class="input sm6">
            <label>Your mobile number</label>
            @Html.TextBoxFor(x => x.MobileNumber)
            <span class="error"></span>
        </div>
        <div class="input sm6">
            <label>Your alternative phone number</label>
            @Html.TextBoxFor(x => x.AlternatePhoneNumber)
            <span class="error"></span>
        </div>
    </div>
    <div class="row">
        <div class="input sm6">
            <label>Your email address</label>
            @Html.TextBoxFor(x => x.AlternatePhoneNumber)
            <span class="error"></span>
        </div>
        <div class="input sm6">
            <label>@prefix postcode</label>
            <input name="postcode_search" type="text" placeholder="e.g. NG1 1PS" />
            <span class="error"></span>
        </div>
    </div>
</div>