@using HelpMyStreetFE.Models.Registration;

@model RegistrationViewModel;

@section Scripts {
    <script>
        const activeStep = @Model.ActiveStep;
    </script>
    <script src="~/registration.js" asp-append-version="true"></script>
}

@{
    ViewData["Title"] = "Your details - Registration";
    Layout = "~/Views/Shared/_LayoutNoHeader.cshtml";
}

    <div class="container">

        <partial name="_Stepper" for="ActiveStep" />

        <div class="row justify-center mt72">
            <div class="sm8">
                <h2>Your details</h2>
                @if (Context.Request.Query["failure"] == "error")
                {
                    <p class="orange">There has been an error submitting your details. Please check your entries and try again.</p>
                }
            </div>
        </div>
        <form id="registration_form" method="post">
            <div class="row justify-center">
                <div class="input sm4">
                    <label>First name</label>
                    <input name="first_name" type="text" maxlength="50" placeholder="e.g. John" />
                    <span class="error"></span>
                </div>
                <div class="input sm4">
                    <label>Last name</label>
                    <input name="last_name" type="text" maxlength="50" placeholder="e.g. Smith" />
                    <span class="error"></span>
                </div>
                <div class="input sm8">
                    <label>Date of birth</label>
                    <input name="dob" type="text" id="datepicker"  placeholder="e.g. 11/12/1994" autocomplete="off" />
                    <span class="error"></span>
                </div>
                <div class="input sm5">
                    <label>Postcode</label>
                    <input name="postcode_search" type="text" placeholder="e.g. NG1 1PS" />
                    <span class="error"></span>
                </div>
                <div class="input sm3">
                    <button class="btn large border-blue blue fill" id="address_finder">
                        <span class="text">Find address</span>                        
                        <div class="loader"><partial name="_LoadingSpinner" model='new LoadingSpinnerViewModel { Text = "Searching...",  ShowDarkSpinner= true}' /></div>
                    </button>
                    <a id="manual_address" href="#" class="input__link">Or enter your address manually</a>
                </div>
                <div class="input sm8 dnone" id="address_selector">
                    <label>Select address</label>
                    <select name="address_selector">
                    </select>
                </div>
                <div class="expander sm8">
                    <h5>Please enter your address</h5>
                    <div class="input">
                        <label>Address line 1</label>
                        <input name="address_line_1" type="text" placeholder="e.g. 170 High Street" />
                        <span class="error"></span>
                    </div>
                    <div class="input">
                        <label>Address line 2</label>
                        <input name="address_line_2" type="text" placeholder="e.g. Hockley" />
                        <span class="error"></span>
                    </div>
                    <div class="input">
                        <label>Town / City</label>
                        <input name="city" type="text" placeholder="e.g. Nottingham" />
                        <span class="error"></span>
                    </div>
                    <div class="input">
                        <label>County</label>
                        <input name="county" type="text" placeholder="e.g. Nottinghamshire" />
                        <span class="error"></span>
                    </div>
                    <div class="input">
                        <label>Postcode</label>
                        <input name="postcode" type="text" placeholder="e.g. NG1 1PS" />
                        <span class="error"></span>
                    </div>
                </div>
                <div class="input sm8">
                    <label>Mobile number</label>
                    <input name="mobile_number" type="number" placeholder="e.g. 07700112233" />
                    <span class="error"></span>
                </div>
                <div class="input sm8">
                    <label>Alternative phone number</label>
                    <input name="alt_number" type="number" placeholder="e.g. 01159232312" />
                    <span class="error"></span>
                </div>

                <div class="sm8">
                    <div class="controls">
                        <button class="btn large cta fill" id="submit_button" type="submit">
                            <span class="text">Continue <span class="large-screen-only">to next page</span> &gt;</span>                            
                            <div class="loader"><partial name="_LoadingSpinner" model='new LoadingSpinnerViewModel { Text = "Next Step..."}' /></div>
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
