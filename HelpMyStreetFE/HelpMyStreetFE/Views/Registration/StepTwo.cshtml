@model RegistrationViewModel;

@section Scripts {
    <script>
        const activeStep = @Model.ActiveStep;
    </script>
    <script src="~/registration.js" asp-append-version="true"></script>
}


<div class="container">

    <partial name="_Stepper" for="ActiveStep" />

    <div class="row justify-center mt72">
        <div class="sm8">
            <h2>Your details</h2>
            @if (Context.Request.Query["failure"] == "error")
            {
                <p class="orange">There has been an error submitting your details. Please try again and if the problem persists contact support.</p>
            }
         </div>
    </div>
    <form id="registration_form" method="post">
        <div class="row justify-center">
            <div class="input sm4">
                <label>First name</label>
                <input name="first_name" type="text" placeholder="e.g. John" />
                <span class="error"></span>
            </div>
            <div class="input sm4">
                <label>Last name</label>
                <input name="last_name" type="text" placeholder="e.g. Smith" />
                <span class="error"></span>
            </div>
            <div class="input sm5">
                <label>Postcode</label>
                <input name="postcode_search" type="text" placeholder="e.g. NG1 1PS" />
                <span class="error"></span>
            </div>
            <div class="input sm3">
                <button class="btn border-blue blue btn--full-width" id="address_finder">
                    <span class="text">Find address</span>
                    <span class="loader">Searching&hellip;</span>
                </button>
                <a id="manual_address" href="#" class="input__link">Or enter your address manually</a>
            </div>
            <div class="input sm8 dnone" id="address_selector">
                <label>Select address</label>
                <select name="address_selector">
                </select>
            </div>
            <div class="expander sm8">
                <h5>Please enter your address</h5>
                <div class="input">
                    <label>Address line 1</label>
                    <input name="address_line_1" type="text" placeholder="e.g. 170 High Street" />
                    <span class="error"></span>
                </div>
                <div class="input">
                    <label>Address line 2</label>
                    <input name="address_line_2" type="text" placeholder="e.g. Hockley" />
                    <span class="error"></span>
                </div>
                <div class="input">
                    <label>Town / City</label>
                    <input name="city" type="text" placeholder="e.g. Nottingham" />
                    <span class="error"></span>
                </div>
                <div class="input">
                    <label>County</label>
                    <input name="county" type="text" placeholder="e.g. Nottingham" />
                    <span class="error"></span>
                </div>
                <div class="input">
                    <label>Postcode</label>
                    <input name="postcode" type="text" placeholder="e.g. NG1 1PS" />
                    <span class="error"></span>
                </div>
            </div>
            <div class="input sm8">
                <label>Mobile number</label>
                <input name="mobile_number" type="number" placeholder="e.g. 0770112233" />
                <span class="error"></span>
            </div>
            <div class="input sm8">
                <label>Alternative phone number</label>
                <input name="alt_number" type="number" placeholder="e.g. 0115 12312312" />
                <span class="error"></span>
            </div>

            <div class="sm8">
                <div class="controls">
                    <button class="btn cta" id="submit_button" type="submit">
                        <span class="text">Continue to next page &gt;</span>
                        <span class="loader">Creating account&hellip;</span>
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>