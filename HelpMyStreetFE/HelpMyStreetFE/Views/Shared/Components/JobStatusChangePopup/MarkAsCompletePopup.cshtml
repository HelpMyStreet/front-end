@model HelpMyStreetFE.Models.Account.Jobs.JobStatusChangePopupViewModel;
@{
    var isShift = Model.RequestType == HelpMyStreet.Utils.Enums.RequestType.Shift;
    var requestType = isShift ? "shift" : "request";
}
<div class="popup__content">
    <partial name="_PopupCloseButton" />
    <div class="popup__content__wrapper">
        <div class="popup__content__header">Completed?</div>
        <div class="popup__content__text">
            @if (isShift)
            {
                <p>Thank you for helping the fight against COVID-19</p>
                <p>Please note, shifts are automatically completed once the date has passed,</p>
                <p>therefore you do not need to manually complete them in future.</p>
            }
            else
            {
            <p>Thank you so much for helping people in your community stay safe!</p>
            <p>We’ll remove this request from your “My Accepted Requests” page.</p>
            <p>The requester will be notified that the request has been marked as Complete.</p>
            }
        </div>
        <div class="popup__content__buttons">
            <p class="error dnone">Oops, we couldn’t complete this @requestType at the moment.</p>
            <partial name="_PopupAcceptButton" model='new PopupButtonModel { ButtonText = "Confirm" }' />
        </div>
    </div>
</div>


