@using HelpMyStreetFE.Models.Account.Jobs;
@model ListViewModel<JobViewModel>


<div class="profile job-list">
    @Html.DisplayFor(x => Model.Items)

    @if (Model.FilteredItems > Model.DisplayedItems)
    {
        <p class="text-center">
            Showing first @Model.DisplayedItems requests@(Model.UnfilteredItems > Model.FilteredItems ? " matching filter" : "").
            @if (Model.FilteredItems - Model.DisplayedItems > Model.ResultsToShowIncrement)
            {
                <a href="#" class="show-more-jobs">Show more</a><span>.</span>
            }
            <a href="#" class="show-all-jobs">Show all @Model.FilteredItems</a>.
        </p>
    }
    else if (Model.DisplayedItems == 0 && Model.UnfilteredItems > 0)
    {
        <p>No requests to display.  Try adjusting the filters above.</p>
    }
</div>
