@model HelpMyStreetFE.Models.Account.Jobs.JobListViewModel


<div class="profile job-list">
    @Html.DisplayFor(x => Model.Jobs)

    @if (Model.FilteredJobs > Model.DisplayedJobs)
    {
        <p class="text-center">
            Showing first @Model.DisplayedJobs requests@(Model.UnfilteredJobs > Model.FilteredJobs ? " matching filter" : "").
            <a href="#" class="show-more-jobs">Show more</a>.
            <a href="#" class="show-all-jobs">Show all @Model.FilteredJobs</a>.
        </p>
    }
</div>

