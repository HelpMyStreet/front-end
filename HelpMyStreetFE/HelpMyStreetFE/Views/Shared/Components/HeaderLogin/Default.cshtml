@model LoginViewModel
<script>
     const configuration = { firebase: @Html.Raw(Json.Serialize(@Model.FirebaseConfiguration))};
</script>
<article id="header-login" class="header-login pl-sm pr-sm pt-sm collapsed">
    <div id="header-login__toggle" class="header-login__collapsed-nav">
        <button id="header-login__btn--toggle" class="btn header-login__btn--toggle cta--blue transparent mr-sm">Log In</button>
    </div>
    <form id="header-login-form" class="header-login__form login-form">
        <header class="header-login__form-header mt-sm">
            <h3 class="header-login__title">Log In</h3>
            <button class="header-login__btn--toggle btn--close" type="button">
                <svg xmlns="" viewBox="0 0 100 100" class="icon--close" width="32" height="32">
                    <circle cx="50" cy="50" r="50" class="bg" />
                    <path d="M30,30 L70,70 M30,70 L70,30" class="cross" stroke-linecap="round" />
                </svg>
            </button>
        </header>
        <div class="header-login__input pt-sm pb-sm mr-sm">
            <label for="email">Email address</label>
            <input type="email" placeholder="Email Address" id="email" />
            <div id="login-fail-message" class="login__fail-message"></div>
        </div>
        <div class="header-login__input header-login__input--password pt-sm pb-sm mr-md">            
            <label for="password" class="password--label">Password</label>
            <input class="password--input" type="Password" placeholder="Password" id="password" />
            <a href="/forgotten-password" class="link--forgot-pw">Forgotten password?</a>
        </div>

        <div class="header-login__btn pt-sm pb-sm">
            <button class="btn btn--login cta--blue transparent mr-sm login-submit-handler" id="login-submit" type="submit">
                <span class="text">Log In</span>
                <div class="loader"><partial name="_LoadingSpinner" model='new LoadingSpinnerViewModel { Text = "Log In", ShowDarkSpinner= true}' /></div>
            </button>
        </div>
    </form>
</article>