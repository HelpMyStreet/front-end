@model HelpMyStreet.Utils.Models.Address

@{
    var MaskAddress = ViewData["MaskAddress"] != null & ViewData["MaskAddress"] is bool ? (bool)ViewData["MaskAddress"] : false;
    var Truncate = ViewData["Truncate"] != null ? (bool)ViewData["Truncate"] : false;
}


@if (!MaskAddress)
{
    @if (!Truncate)
    {
        <span>@Model.AddressLine1, </span>
        @if (!String.IsNullOrEmpty(Model.AddressLine2))
        {
            <span>@Model.AddressLine2, </span>
        }
        @if (!String.IsNullOrEmpty(Model.AddressLine3))
        {
            <span>@Model.AddressLine3, </span>
        }
    }
    @if (!String.IsNullOrEmpty(Model.Locality))
    {
        <span>@Model.Locality, </span>
    }
}
@if (!String.IsNullOrEmpty(Model.Postcode))
{
    @if (!Truncate)
    {
        <span>@Model.Postcode</span>
    }
    else
    {
        <span>@(Model.Postcode.Split(" ").FirstOrDefault())</span>
    }
}
