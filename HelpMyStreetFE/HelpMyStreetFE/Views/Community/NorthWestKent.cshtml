@using HelpMyStreetFE.Models.Community; 
@using HelpMyStreetFE.Models.Feedback;

@model CommunityViewModel;

@{
    ViewData["Title"] = Model.CommunityName;
    ViewData["HMSLogoViewModel"] = new HMSLogoViewModel() { LinkEntireLogo = false, PrimaryText = "Age UK North West Kent", PrimaryMobileText = "Age UK NW Kent", ShowSecondaryText = true };
    ViewData["RequestHelpGroupId"] = Model.EncodedGroupId;
}

@section Scripts {
    <script src="/community.js" asp-append-version="true"></script>
}

<div class="community" data-group-id="@Model.EncodedGroupId">
    <div class="container">
       
        @*<div class="community-banner">
            <img src="~/img/community/ageUK/kent/northwest/banner.jpg" alt="North West Kent Team" />
        </div>*@
        
    </div>
    <div class="outer-container">
        <div class="container">
            <div class="row flex hero mb-lg">
                <div class="row sm6 align-center content-page">
                    <header class="mw1000">
                        <h2 class="mb0 mt-md">Welcome to Age UK North West Kent</h2>
                    </header>

                    <p class='mt-sm mb-xs'>
                        Age UK North West Kent is an independent local charity delivering services for older people in Gravesend, Dartford, Swanscombe & Greenhithe, Northfleet and the surrounding areas. Here are just some of things we can help with:
                    </p>
                    <ul class='tick-list mt-xs mb-sm ml-sm'>
                        <li>A friendly chat</li>                        
                        <li>Collecting prescriptions</li>
                        <li>Fresh meal delivery service</li>
                        <li>Urgent medical transport</li>
                    </ul>


                    <div class="row sm6 text-center justify-center mb-sm">
                        <p class="mt-sm mb-sm pl-md pr-md">Click to request help, or alternatively give us a call on 01474 564898.</p>
                        <partial name="_RequestHelpButton" model="Model" />
                    </div>

                    <div class="row sm6 text-center justify-center mb-md">
                        <p class="mt-sm mb-sm pl-md pr-md">Age UK North West Kent relies on volunteers to help us offer vital services. Can you lend a hand?</p>
                        <partial name="_SignUpLogInJoinLeaveButtons" model="new SignUpLogInJoinLeaveViewModel { CommunityViewModel = Model, ShowLeaveButton = false }" />
                    </div>
                </div>

                <div class="sm6 pl-md card">
                    <div class="text-right commmunity-map-container map static-map" id="map" data-latitude="@Model.Map_CentreLatitude" data-longitude="@Model.Map_CentreLongitude" data-zoom="@Model.Map_ZoomLevel"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="outer-container outer-container--darker">
        <div class="container">
            <div class="row">
                <div class="sm12">
                    <h2 class="mb15 mt-lg text-center">Welcome from Age UK North West Kent</h2>
                    <div>
                        
                            <p>
                                Age UK North West Kent is an independent local charity. We've been working in the local community
                                to help older people since 2011, following a merger between four Age Concerns in the boroughs of Dartford
                                and Gravesham. We have dedicated staff and volunteers helping us to deliver services and activities for older
                                people in Gravesend, Dartford, Swanscombe & Greenhithe, Northfleet and the surrounding areas.
                            </p>
                            <p>
                                Our aim is to be the principal organisation in delivering support for older people in North West Kent, enabling
                                people to love later life, to live independently, access appropriate services and enrich their lives.
                            </>
                            <p>
                                We intend to do this by developing additional services and enhancing our current services in order to support more
                                people. With your help, we can deliver more services to people in later life in the local North West Kent areas. We
                                have a wide range of fun and interesting volunteering opportunities - sign up on this page or find out more <a href="https://www.ageuk.org.uk/northwestkent/get-involved/volunteer/">here</a>.
                            </p>
                            <p>
                                To request help, simply fill in the request help form on this page or give us a call on one of the numbers below.
                            </p>
                            <p>
                                Telephone: 01474 564898 (Gravesend Office and Day Centre)
                            </p>
                            <p>
                                Telephone: 01322 226496 (Dartford 'Meadowside' Centre)
                            </p>                                              
                    </div>
                    <div class="mb-md"></div>
                </div>
            </div>
        </div>
    </div>


    <div class="outer-container">
        <div class="container inner-container--no-side-padding">
            <div class="row hero flex text-center justify-center">

                <div class="flex sm6">
                    <partial name="_HowCanWeHelpCard" model="Model" />
                </div>

                <div class="flex sm6">
                    <partial name="_VolunteerWithUsCard" model="Model" />
                </div>

            </div>
        </div>
    </div>



    <div class="outer-container outer-container--darker">
        <div class="container ">
            <div class="row justify-center">
                <h2 class="text-center mt-lg">Useful Links</h2>
            </div>
            <div class="row flex justify-center">
                <div class="sm12 community-useful-links mb-lg">
                    <p><a href="https://www.ageuk.org.uk/northwestkent/">Age UK North West Kent Website</a> - Visit our main webpage for more information</p>
                    <p><a href="https://www.facebook.com/northwestkentageuk/">Age UK North West Kent Facebook</a> - Our social media page</p>
                </div>
            </div>
        </div>
    </div>


    <div class="container mt-md mb-lg">
        @await Component.InvokeAsync("Testimonials", new { feedbackMessageType = FeedbackMessageType.Group, groupKey = Model.groupKey })
    </div>



    <div class="outer-container outer-container--darker">
        <partial name="_AboutHelpMyStreet" />
    </div>

    <div class="outer-container">
        <div class="container inner-container--no-side-padding">
            <div class="row hero flex text-center justify-center">

                <div class="flex sm6">
                    <partial name="_HowCanWeHelpCard" model="Model" />
                </div>

                <div class="flex sm6">
                    <partial name="_VolunteerWithUsCard" model="Model" />
                </div>

            </div>
        </div>
    </div>

</div>