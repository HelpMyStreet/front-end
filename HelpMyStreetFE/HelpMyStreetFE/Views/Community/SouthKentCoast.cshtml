@using HelpMyStreetFE.Models.Community; 
@using HelpMyStreetFE.Models.Feedback;

@model CommunityViewModel;

@{
    ViewData["Title"] = Model.CommunityName;
    ViewData["HMSLogoViewModel"] = new HMSLogoViewModel() { LinkEntireLogo = false, PrimaryText = "Age UK South Kent Coast", PrimaryMobileText = "South Kent Coast", ShowSecondaryText = true };
    ViewData["RequestHelpGroupId"] = Model.EncodedGroupId;
}

@section Scripts {
    <script src="/community.js" asp-append-version="true"></script>
}

<div class="community" data-group-id="@Model.EncodedGroupId">
    <div class="container">
        <div class="community-banner">
            <img src="~/img/community/ageUK/kent/southkentcoast/banner.jpg" alt="South Kent Coast Team" />
        </div>
    </div>
    <div class="outer-container">
        <div class="container">
            <div class="row flex hero mb-lg">
                <div class="row sm6 align-center content-page">
                    <header class="mw1000">
                        <h2 class="mb0 mt-md">Welcome to Age UK South Kent Coast</h2>
                    </header>

                    <p class='mt-sm mb-xs'>
                        We are continuing to support our local older communities during this unprecedented time by delivering some much-needed services:
                    </p>
                    <ul class='tick-list mt-xs mb-sm ml-sm'>
                        <li>Shopping for essentials</li>
                        <li>Collecting prescriptions</li>
                        <li>A friendly chat</li>
                        <li>A mealtime companion</li>
                        <li>Meals to your door</li>
                    </ul>


                    <div class="row sm6 text-center justify-center mb-sm">
                        <p class="mt-sm mb-sm pl-md pr-md">Click to request help, or alternatively give us a call on 01304 372 608.</p>
                        <partial name="_RequestHelpButton" model="Model" />
                    </div>

                    <div class="row sm6 text-center justify-center mb-md">
                        <p class="mt-sm mb-sm pl-md pr-md">Age UK South Kent Coast relies on volunteers to help us offer vital services. Can you help?</p>
                        <partial name="_SignUpLogInJoinLeaveButtons" model="new SignUpLogInJoinLeaveViewModel { CommunityViewModel = Model, ShowLeaveButton = false }" />
                    </div>
                </div>

                <div class="sm6 pl-md card">
                    <div class="text-right commmunity-map-container map static-map" id="map" data-latitude="@Model.Map_CentreLatitude" data-longitude="@Model.Map_CentreLongitude" data-zoom="@Model.Map_ZoomLevel"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="outer-container outer-container--darker">
        <div class="container">
            <div class="row">
                <div class="sm12">
                    <h2 class="mb15 mt-lg text-center">Welcome from the Age UK South Kent Coast Team</h2>


                   <partial name="_CommunityVolunteersSlider" model="Model" />


                    <div>
                        <p>
                            Age UK South Kent Coast (formerly known as Age UK Folkestone and Age Concern Deal) has been operating in this area
                            for over 50 years. We are committed to the welfare of all people over the age of 50.
                        </p>
                        <p>
                            We provide a hub to help access valuable information for services, dealing with queries and questions and offering a helping
                            hand to those who wish to remain independent within their own homes.
                        </p>
                        <p>
                            We also offer clubs with activities for those with dementia as well as advice for carers of those with dementia.
                        </p>
                        <p><strong>What we do:</strong></p>

                        <p>We give advice - our trained advisors offer free information and advice to older people and their families.</p>
                        <p>We provide meals - you can order a two-course lunch, freshly prepared in our kitchen, to be delivered, hot, straight to your door seven days a week.</p>
                        <p>We help you get benefits - at Age UK South Kent Coast, we aim to help you get the benefits that you're entitled to and more!</p>
                        <p>We befriend - The Keep In Touch (KIT) telephone befriending service is primarily for people over the age of 50 who would benefit from the additional support a telephone friendship could provide.</p>
                        <p>We provide activities - our day centres have a range of activity groups and events, giving older people the opportunity to participate, socialise, or learn a new skill.</p>
                        <p>With your help, we can deliver more services to people in later life in the local Deal and Folkestone areas. We have a wide range of fun and interesting volunteering opportunities - sign up on this page or find out more <a href="https://www.ageuk.org.uk/southkentcoast/get-involved/volunteer/">here</a>.</p>
                        <p>To request help, simply fill in the request help form on this page or give us a call on one of the numbers below.</p>
                        <p>Telephone: 01303 279 031 or 01303 279 621 (Folkestone)</p>
                        <p>Telephone: 01304 372 608 (Deal)</p>
                        <p>We are open Monday - Friday 9.00am - 4.00pm.</p>
                    </div>
                    <div class="mb-md"></div>
                </div>
            </div>
        </div>
    </div>


    <div class="outer-container">
        <div class="container inner-container--no-side-padding">
            <div class="row hero flex text-center justify-center">

                <div class="flex sm6">
                    <partial name="_HowCanWeHelpCard" model="Model" />
                </div>

                <div class="flex sm6">
                    <partial name="_VolunteerWithUsCard" model="Model" />
                </div>

            </div>
        </div>
    </div>



    <div class="outer-container outer-container--darker">
        <div class="container ">
            <div class="row justify-center">
                <h2 class="text-center mt-lg">Useful Links</h2>
            </div>
            <div class="row flex justify-center">
                <div class="sm12 community-useful-links mb-lg">
                    <p><a href="https://www.ageuk.org.uk/southkentcoast/">Age UK South Kent Coast Website</a> - Visit our main webpage for more information</p>
                    <p><a href="https://www.facebook.com/AgeUKMarigold/">Age UK South Kent Coast - The Marigold Centre Facebook</a> - The social media page for our community hub</p>
                </div>
            </div>
        </div>
    </div>


    <div class="outer-container outer-container--darker mb-md">
        <partial name="_PhotoSlider" model="Model.CarouselImages.First()" />
    </div>


    <div class="container mt-md mb-lg">
        @await Component.InvokeAsync("Testimonials", new { feedbackMessageType = FeedbackMessageType.Group, groupKey = Model.groupKey })
    </div>



    <div class="outer-container outer-container--darker">
        <partial name="_AboutHelpMyStreet" />
    </div>

    <div class="outer-container">
        <div class="container inner-container--no-side-padding">
            <div class="row hero flex text-center justify-center">

                <div class="flex sm6">
                    <partial name="_HowCanWeHelpCard" model="Model" />
                </div>

                <div class="flex sm6">
                    <partial name="_VolunteerWithUsCard" model="Model" />
                </div>

            </div>
        </div>
    </div>

</div>